{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "paths": {
      "@services/*": ["services/*"],
      "@routes/*": ["routes/*"],
      "@config/*": ["config/*"],
      "@interfaces/*": ["interfaces/*"],
      "@middleware/*": ["middleware/*"],
      "@models/*": ["models/*"],
      "@utils/*": ["utils/*"],
      "@dbtest/*": ["dbtest/*"],
      "@validate/*": ["validate/*"],
      "@logger/*": ["logger/*"],
      "@classes/*": ["classes/*"],
      "@gentools/*": ["gentools/*"],
      "@schemas/*": ["schemas/*"]
    },
  },
  "include": [
    "empty.ts",
    "src/**/*.ts",
    "src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "swc": true
  }
}
