{
  "compilerOptions": {
      "module": "commonjs",
      "lib": ["es2021"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2021",
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "strict": true,
      "noUnusedLocals": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "src",
      "paths": {
        "@services/*": ["services/*"],
        "@routes/*": ["routes/*"],
        "@config/*": ["config/*"],
        "@interfaces/*": ["interfaces/*"],
        "@middleware/*": ["middleware/*"],
        "@models/*": ["models/*"],
        "@utils/*": ["utils/*"],
        "@dbtest/*": ["dbtest/*"],
        "@validate/*": ["validate/*"],
        "@logger/*": ["logger/*"],
        "@classes/*": ["classes/*"],
        "@gentools/*": ["gentools/*"],
        "@schemas/*": ["schemas/*"]
      },
      "incremental": true
  },
  "include": [
    "empty.ts",
    "src/**/*.ts",
    "src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "swc": true
  }
}
